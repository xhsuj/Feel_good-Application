<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding: 15,15
            spacing: 20,20
            Label:
                text:"User Login"
                font_size:'20sp'
            TextInput:
                id: username
                hint_text:"Username"
            TextInput:
                id: password
                hint_text:"Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.log_in(root.ids.username.text,root.ids.password.text)
                    size_hint:0.3,0.7 #horizontal, vertical
                    pos_hint: {'center_x':0.5,'center_y':0.6}
            Label:
                id:login_wrong
                text:""
        GridLayout:
            cols:2
            size_hint:0.2,0.2 #let the height of 2 cols be 20% of the LoginScreen
            padding: 10,10
            spacing: 10,0
            Button:
                text:"Forgot Password?"
                background_color:1,1,1,0 #last for transparent
                opacity:1 if self.state=='normal' else 0.5 #like hover in html
                color:0.1,0.7,1,1
            Button:
                text:"Sign Up"
                background_color:1,1,1,0 #last for transparent
                opacity:1 if self.state=='normal' else 0.5 #like hover in html
                color:0.1,0.7,1,1
                on_press: root.sign_up()
<SignUpScreen>:
    GridLayout:
        cols:1
        padding:20,20
        spacing:20,20
        GridLayout:
            cols:1
            Label:
                text:"Sign up for a space journey!"
        GridLayout:
            cols:2
            TextInput:
                id: username
                hint_text:"New username"
        GridLayout:
            cols:3
            TextInput:
                id: password
                hint_text:"New password"
        GridLayout:
            cols:4
            Button:
                text:"Submit"
                on_press: root.add_user(root.ids.username.text,root.ids.password.text)
                

<SignUpScreenSuccess>:
    GridLayout:
        cols:1
        Label:
            text:"Sign Up Successfully!"
        Button:
            text:"Login Page"
            on_press: root.directmain()
<LoginScreenSuccess>:
    GridLayout:
        cols:1
        padding:30,30
        spacing:30,30
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source:"logout_hover.png" if self.hovered else "logout_nothover.png"
                size_hint: 0.35,0.35
                pos_hint:{'center_x':0.93,'center_y':0.8}
        Label:
            text:"How Do You Feel?"
        TextInput: 
            id: feeling
            hint_text:"Things to try: happy, sad, unloved..."
        Button:
            text:"Enlighten Me"
            on_press: root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id:quote
                text:""
                text_size:self.width, None
                size_hint_y: None
                height: self.texture_size[1] #first is width, sec is height


<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name:"sign_up_screen"
    SignUpScreenSuccess:
        name:"sign_up_screen_success"
    LoginScreenSuccess:
        name:"login_screen_success"

